<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/btn_attendence_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/left"
            android:layout_weight="0"
            style="?android:attr/borderlessButtonStyle"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            android:gravity="center"
            android:text="考勤信息"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_weight="0"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F4F4F4">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#969696"
            android:layout_marginTop="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#fff"
            android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择年月"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_marginLeft="17dp"
                android:layout_gravity="center_vertical"/>

            <Button
                android:id="@+id/btn_attendence_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="请选择"
                android:textSize="18sp"
                android:textColor="#BFBFBF"
                android:background="#fff"
                android:gravity="right|center_vertical"
                android:drawableRight="@drawable/down4"
                android:drawablePadding="15dp"
                android:layout_marginRight="15dp"
                style="?android:attr/borderlessButtonStyle"/>



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#969696" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="考勤月度汇总"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#F4F4F4">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#969696" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#fff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出勤天数"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:layout_marginLeft="17dp"
                    android:layout_gravity="center_vertical"/>

                <Button
                    android:id="@+id/btn_attendence_daynum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textSize="18sp"
                    android:textColor="#BFBFBF"
                    android:background="#fff"
                    android:gravity="right|center_vertical"
                    android:drawableRight="@drawable/down4"
                    android:drawablePadding="15dp"
                    android:layout_marginRight="15dp"
                    style="?android:attr/borderlessButtonStyle"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#969696"
                android:layout_marginLeft="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#fff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加班天数"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:layout_marginLeft="17dp"
                    android:layout_gravity="center_vertical"/>

                <Button
                    android:id="@+id/btn_overtime_daynum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textSize="18sp"
                    android:textColor="#BFBFBF"
                    android:background="#fff"
                    android:gravity="right|center_vertical"
                    android:drawableRight="@drawable/down4"
                    android:drawablePadding="15dp"
                    android:layout_marginRight="15dp"
                    style="?android:attr/borderlessButtonStyle"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#969696"
                android:layout_marginLeft="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#fff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="17dp"
                    android:text="请假天数"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_leave_daynum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textSize="18sp"
                    android:textColor="#BFBFBF"
                    android:background="#fff"
                    android:gravity="right|center_vertical"
                    android:drawableRight="@drawable/down4"
                    android:drawablePadding="15dp"
                    android:layout_marginRight="15dp"
                    style="?android:attr/borderlessButtonStyle"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#969696"
                android:layout_marginLeft="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#fff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="休息天数"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:layout_marginLeft="17dp"
                    android:layout_gravity="center_vertical"/>

                <Button
                    android:id="@+id/btn_rest_daynum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textSize="18sp"
                    android:textColor="#BFBFBF"
                    android:background="#fff"
                    android:gravity="right|center_vertical"
                    android:drawableRight="@drawable/down4"
                    android:drawablePadding="15dp"
                    android:layout_marginRight="15dp"
                    style="?android:attr/borderlessButtonStyle"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#969696"
                android:layout_marginLeft="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#fff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="17dp"
                    android:text="出差"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_travel_daynum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textSize="18sp"
                    android:textColor="#BFBFBF"
                    android:background="#fff"
                    android:gravity="right|center_vertical"
                    android:drawableRight="@drawable/down4"
                    android:drawablePadding="15dp"
                    android:layout_marginRight="15dp"
                    style="?android:attr/borderlessButtonStyle"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#969696"
                android:layout_marginLeft="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#fff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="迟到"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:layout_marginLeft="17dp"
                    android:layout_gravity="center_vertical"/>

                <Button
                    android:id="@+id/btn_delay_daynum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textSize="18sp"
                    android:textColor="#BFBFBF"
                    android:background="#fff"
                    android:gravity="right|center_vertical"
                    android:drawableRight="@drawable/down4"
                    android:drawablePadding="15dp"
                    android:layout_marginRight="15dp"
                    style="?android:attr/borderlessButtonStyle"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#969696"
                android:layout_marginLeft="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#fff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="早退"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:layout_marginLeft="17dp"
                    android:layout_gravity="center_vertical"/>

                <Button
                    android:id="@+id/btn_early_daynum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textSize="18sp"
                    android:textColor="#BFBFBF"
                    android:background="#fff"
                    android:gravity="right|center_vertical"
                    android:drawableRight="@drawable/down4"
                    android:drawablePadding="15dp"
                    android:layout_marginRight="15dp"
                    style="?android:attr/borderlessButtonStyle"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#969696"
                android:layout_marginLeft="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#fff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="17dp"
                    android:text="旷工"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_absent_daynum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textSize="18sp"
                    android:textColor="#BFBFBF"
                    android:background="#fff"
                    android:gravity="right|center_vertical"
                    android:drawableRight="@drawable/down4"
                    android:drawablePadding="15dp"
                    android:layout_marginRight="15dp"
                    style="?android:attr/borderlessButtonStyle"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#969696" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>


