<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:gravity="center"
        android:text="个人中心"
        android:textColor="#000"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F4F4F4">

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="170dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/fg_peronal_info">

            <ImageView
                android:id="@+id/iv_me_pic"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@drawable/me_pic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="40dp"
                    android:text="用户名"
                    android:textColor="#000"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:text="工作团队"
                    android:textColor="#000"
                    android:textSize="22sp" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:background="#fff">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#969696" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#fff"
            android:layout_marginRight="15dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0"
                android:background="@drawable/btn_notice"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                />

            <Button
                android:id="@+id/btn_me_notice"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:background="#fff"
                android:drawableRight="@drawable/right"
                android:gravity="center_vertical"
                android:text="公告"
                android:textColor="#000"
                android:textSize="18sp" />

        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#969696"
                android:layout_marginLeft="55dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#fff"
            android:layout_marginRight="15dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0"
                android:background="@drawable/btn_my_information"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                />

            <Button
                android:id="@+id/btn_my_infomation"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:background="#fff"
                android:drawableRight="@drawable/right"
                android:gravity="center_vertical"
                android:text="我的资料"
                android:textColor="#000"
                android:textSize="18sp" />

        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#969696"
                android:layout_marginLeft="55dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#fff"
            android:layout_marginRight="15dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0"
                android:background="@drawable/btn_reset_pw"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical" />

            <Button
                android:id="@+id/btn_me_reset_pw"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="center_vertical"
                android:text="修改密码"
                android:textColor="#000"
                android:textSize="18sp"
                android:drawableRight="@drawable/right"/>

        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#969696"
                android:layout_marginLeft="55dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#fff"
            android:layout_marginRight="15dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0"
                android:background="@drawable/btn_bind_phone"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                />

            <Button
                android:id="@+id/btn_me_bind_phone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="center_vertical"
                android:text="绑定手机"
                android:textColor="#000"
                android:textSize="18sp"
                android:drawableRight="@drawable/right"/>

        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#969696"
                android:layout_marginLeft="55dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#fff"
            android:layout_marginRight="15dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0"
                android:background="@drawable/btn_exit_login"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                />

            <Button
                android:id="@+id/btn_me_exit_login"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:background="#fff"
                android:drawableRight="@drawable/right"
                android:gravity="center_vertical"
                android:text="退出登录"
                android:textColor="#000"
                android:textSize="18sp" />

        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#969696" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>